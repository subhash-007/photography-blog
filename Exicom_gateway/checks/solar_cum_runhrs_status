#!/usr/bin/python
import binascii
"""
vlan Poller script.
This is part of device application. 
Poller script determines the vlan. 
poller script takes the snmp value of OID .1.3.6.1.4.1.161.19.3.2.1.55.0 from snmp agent of device at specific interval.
all ports status are sent to device application 
"""
# ######################################################################
# Function : check_exicom_model_no_invent
#
# Parameters: info (SNMP Output) _no_params(No Parameters)
#
# Output: service state and plugin output
# #####################################################################
#def inventory_system_base_swversion_invent(info):
#    if info[0][0]:
#        return [ (None, None) ]

def check_solar_cum_runhrs_status(item, _no_params, info):
    """
                check_exicom_model_no_invent function calculates vlan

                Args:
                        item (str) Specific item on SNMP output on which we want to filter results
                
                Kwargs:
                        params (tuple) Check parameters for critical and warning state of service

                Returns:
                        state (int) :
                                        0 : OK
                                        1 : Warning
                                        2: Critical
                    3: unknown
                        infotext(string):
                                        plugin output
                                        Example : OK - vlan=1;;;;

                        Raises:
                               Exception
    """
    state = 3
    infotext = "unknown_value"
    cumulative_run=None
    try:
        if info:
            if info[0][0]:
                cumulative_run = info[0][0]
		try:
		    cumulative_run = float(cumulative_run)
		except Exception,e:
		    cumulative_run = info[0][0].replace(' ','@')
                state = 0
                infotext = "cumulative_run=%s" % cumulative_run
    except Exception,e:
        infotext = "unknown_value"
    return (state,infotext,[("cumulative_run",cumulative_run)])


check_info["solar_cum_runhrs_status"] = {
    'check_function':          check_solar_cum_runhrs_status,
    'service_description':     'solar_cum_runhrs_status',
    'has_perfdata':         True,
    'snmp_info':               ('.1.3.6.1.4.1.38016.14.10', ['5.0']),
    'snmp_scan_function':      lambda oid: "m1000" in oid(".1.3.6.1.4.1.38016.14.1.1.0").lower(),
}

